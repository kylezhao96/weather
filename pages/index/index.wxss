/* 上方天气 */

page {
  height: 100%;
  width: 100%;
}

.page {
  position: fixed;
  width: 100%;
  height: 100%;
  background-color: #faf9fa;
}

.top {
  background-color: #70e2fc;
  height: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #fff;
}

.posi {
  margin: 20rpx 0 60rpx 0;
  height: 5%;
  line-height: 30rpx;
}

.posi image {
  height: 28rpx;
  width: 28rpx;
  vertical-align: top;
}

.posi text {
  line-height: 30rpx;
  font-size: 30rpx;
}

.group-1 {
  overflow: hidden;
  display: flex;
  width: 100%;
  height: 20%;
  padding: 0 30% 0 30%;
  flex-direction: row;
  align-items: center;
}

.weaimg {
  height: 100%;
  width: 50%;
}

.weaimg image {
  height: 100%;
  width: 30%;
  float: right;
}

.weatxt {
  width: 50%;
  height: 100%;
  font-size: 30rpx;
  padding-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.temp {
  margin-top: 10rpx;
  height: 30%;
  font-size: 120rpx;
  font-style: bold;
}

.group-2 {
  height: 5%;
  font-size: 30rpx;
  padding-bottom: 3%;
}

.radious {
  height: 30%;
  width: 100%;
  background-color: #faf9fa;
  border-radius: 150% 150% 0 0;
}

/*底部未来三天天气预报  */

.bottom {
  margin-top: -10%;
  display: flex;
  flex-direction: column;
  height: 60%;
}

.forecast {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  width: 84%;
  height: 26%;
  margin: 2% 5%;
  padding: 0 3%;
  background-color: #fff;
  border-radius: 10%;
}
