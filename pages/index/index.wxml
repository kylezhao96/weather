<!--index.wxml-->
<view class='page'>
  <view class='top'>
    <view class='posi' bindtap='setPostion'>
      <image src='../images/position.png'> </image><text>{{position}}这是位置</text>
    </view>
    <view class='temp'>
      <text>{{temperature}}气温</text>
    </view>
    <view class='weather'>
      <text>{{weather}}天气</text>
    </view>
    <view class='tips'>
      <text>{{tips}}小贴士</text>
    </view>
  </view>
  <view class='bottom'>
    <view class='today'></view>
    <view class='tomorrow'></view>
  </view>
</view>